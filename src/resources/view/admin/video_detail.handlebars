<div class="container p-4">
    <iframe width="100%" src="https://www.youtube.com/embed/{{video.slug}}" title="{{video.name}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>

    <form method="POST" action="./update/{{video._id}}">
        <h1>Detail Video Info</h1>
        <p>Views: {{video.views}}<br>
        YoutubeID: {{video.idVid}}</p>
        <div class="form-group">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label"><b>Name</b></label>
                <input type="text" class="form-control" id="name" name="name" value="{{video.name}}">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label"><b>Description</b></label>
                <input type="text" class="form-control" id="description" name="description" value="{{video.description}}">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label"><b>Video Script</b></label>
                <textarea class="form-control" id="script" name="script" style="height: fit-content;">{{video.script}}</textarea>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label"><b>Tag</b></label>
                <input type="text" class="form-control" id="tag" name="tag" value="{{video.tag}}">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label"><b>Catoglory</b></label>
                <input type="text" class="form-control" id="catoglory" name="catoglory" value="{{video.catoglory}}">
            </div>

        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 2%;">Lưu chỉnh sửa</button>
    </form>
</div>
<div class="container p-4">
  <div class="row justify-content-md-center">
    <div class="col-6">
        <h1 class="text-center">Signup New Account</h1>
        {{#if msgError}}
        <div class="alert alert-danger" role="alert">
            {{msgError}}
        </div>
        {{/if}}

        {{#if lsterror}}
        {{#each lsterror}}
        <div class="alert alert-danger" role="alert">
            {{this.msg}}
        </div>
        {{/each}}
        {{/if}}

        <form action="./signup/create" method="post" class="row g-3 login-form">
            <div class="col-md-12">
                <label for="fullname" class="form-label">Fullname</label>
                <input type="text" class="form-control" id="fullname" name="fullname" value="{{pastData.fullname}}">
            </div>

            <div class="col-md-12">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="{{pastData.email}}">
            </div>
            <div class="col-md-12">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <div class="col-md-12">
                <label for="re-password" class="form-label">Retype Password</label>
                <input type="password" class="form-control" id="re-password" name="re-password">
            </div>
            <div class="col-12 text-center mt-4">
                <button type="submit" class="btn btn-primary">Signup Now</button>
            </div>
        </form>
    </div>
  </div>
</div>
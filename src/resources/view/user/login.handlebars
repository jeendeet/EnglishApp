<div class="container p-4">
  <div class="row justify-content-md-center">
    <div class="col-6">
        <h1>Login Account</h1>
        {{#if msgError}}
            <div class="alert alert-danger" role="alert">
            {{msgError}}
            </div>
        {{/if}}

        <form action="/user/login-authen" method="post" role="form" class="login-form">
        <div class="row">
            <div class="form-group mt-3 mt-md-0">
            <label class="pb-2 fw-bold" for="email">Email: </label>
            <input type="email" class="form-control" name="email" id="email" placeholder="" required>
            </div>
        </div>
        <div class="form-group my-4">
            <label class="pb-2 fw-bold" for="password">Mật khẩu: </label>
            <input type="password" class="form-control" name="password" id="password" placeholder="" required>
        </div>

        <p>You dont have account? <a href="./signup">Signup now!</a> <br>
        You dont remember password? <a href="">Verrified now!</a>
        </p>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
        </form>
    </div>
  </div>
</div>